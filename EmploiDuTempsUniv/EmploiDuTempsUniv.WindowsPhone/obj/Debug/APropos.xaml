<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  x:Class="EmploiDuTempsUniv.APropos"
  FontSize="16">
    <Page.BottomAppBar>
        <CommandBar
      AppBar.IsSticky="False"
      Foreground="#DEFFFFFF" Background="{ThemeResource PhoneAccentBrush}">
            <CommandBar.PrimaryCommands>
                <AppBarButton
              x:Name="accueil"
              FrameworkElement.HorizontalAlignment="Stretch"
              AppBarButton.Label="Accueil"
              AppBarButton.Icon="Back"/>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    <Page.Content>
    <Grid
      x:Name="LayoutRoot"
      Panel.Background="White"
      FrameworkElement.Margin="0,-26.667,0,-0.333">
      <Grid.RowDefinitions>
            <RowDefinition
              Height="Auto"/>
            <RowDefinition
              RowDefinition.Height="*"/>
                <RowDefinition
              RowDefinition.Height="Auto"/>
        </Grid.RowDefinitions>
            <Grid.Children>
                <StackPanel
              Grid.Row="0"
              FrameworkElement.Margin="0,0,0,15">
                    <StackPanel.Children>
                        <Grid
                      FrameworkElement.Height="25" Background="{ThemeResource PhoneAccentBrush}">
                        </Grid>
                    <TextBlock
                      TextBlock.Text="Emploi du temps"
                      TextBlock.FontSize="40"
                      TextBlock.FontWeight="Bold"
                      TextBlock.Padding="15,0,0,0">
                      <TextBlock.Foreground>
                        <StaticResource
                          ResourceKey="PhoneAccentBrush"/>
                      </TextBlock.Foreground>
                    </TextBlock>
                        <TextBlock
                      x:Name="sousTitre"
                      TextBlock.Text="A propos"
                      FrameworkElement.Margin="9,-7,0,0"
                      TextBlock.FontWeight="SemiBold"
                      TextBlock.FontSize="22"
                      TextBlock.Padding="20,0,0,0">
                            <TextBlock.Foreground>
                                <StaticResource
                          ResourceKey="PhoneAccentBrush"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel.Children>
            </StackPanel>
            <Grid
              x:Name="ContentPanel"
              Grid.Row="1"
              FrameworkElement.Margin="12,0,12,0">
                    <Grid.Children>
                        <StackPanel
                      FrameworkElement.VerticalAlignment="Top"
                      FrameworkElement.HorizontalAlignment="Center">
                            <StackPanel.Children>
                                <TextBlock
                              FrameworkElement.HorizontalAlignment="Left"
                              TextBlock.TextWrapping="Wrap"
                              TextBlock.Text="Emploi du temps"
                              FrameworkElement.VerticalAlignment="Top" Foreground="{ThemeResource PhoneAccentBrush}"/>
                                <TextBlock
                              x:Name="Version"
                              FrameworkElement.HorizontalAlignment="Left"
                              TextBlock.TextWrapping="Wrap"
                              FrameworkElement.VerticalAlignment="Top"
                              FrameworkElement.Margin="20,0,0,15" Foreground="#FF363636">
                                    <TextBlock.Text>
                                        <Binding
                                  Binding.Path="version"/>
                                    </TextBlock.Text>
                                    <!--
                                    <TextBlock.Foreground>
                                        <ThemeResource
                                  ResourceKey="PhoneAccentBrush"/>
                                    </TextBlock.Foreground>
                                    -->
                                </TextBlock>
                                <TextBlock
                              TextBlock.TextWrapping="Wrap"
                              TextBlock.Text="Application développée dans le cadre d&apos;un projet lors de ma formation à l&apos;IUT Informatique de Dijon."
                              TextBlock.Foreground="#DE000000"
                              FrameworkElement.VerticalAlignment="Top"
                              FrameworkElement.Margin="0,0,0,15"/>
                            </StackPanel.Children>
                        </StackPanel>
                    </Grid.Children>
            </Grid>
                <StackPanel
              x:Name="adSpace"
              Grid.Row="2">
                    <StackPanel.Children>
                        <!--
                        <AdControl
                      x:Name="duplex"
                      AdControl.AppId="2946d409-7050-4c7d-80a1-503808a07fd4"
                      AdControl.AdUnitId="142195"
                      UIElement.Visibility="Collapsed"/>
                        <AdControl
                      x:ConnectionId="2"
                      x:Name="pubcenterAd"
                      AdControl.AutoRefreshIntervalInSeconds="60"
                      AdControl.ApplicationId="cf6c2528-23ef-4340-992d-7013006564a8"
                      AdControl.AdUnitId="210346"
                      FrameworkElement.Height="50"
                      AdControl.IsAutoRefreshEnabled="False"
                      FrameworkElement.VerticalAlignment="Top"
                      FrameworkElement.Width="320"
                      FrameworkElement.HorizontalAlignment="Center"
                      UIElement.Visibility="Visible"/>
                        -->
                    </StackPanel.Children>
                </StackPanel>
            </Grid.Children>
    </Grid>
  </Page.Content>
</Page>


