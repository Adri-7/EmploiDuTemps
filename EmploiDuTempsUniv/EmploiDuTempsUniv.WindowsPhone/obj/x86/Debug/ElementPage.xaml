<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  x:Class="EmploiDuTempsUniv.ElementPage"
  Control.FontSize="15">
    <Page.BottomAppBar>
        <CommandBar
      AppBar.IsSticky="False"
      Control.Foreground="#DEFFFFFF" Background="{ThemeResource PhoneAccentBrush}">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='1'
              x:Name="retour"
              FrameworkElement.HorizontalAlignment="Stretch"
              AppBarButton.Label="Retour"
              AppBarButton.Icon="Back"                     />
            <AppBarButton x:ConnectionId='2'
              x:Name="Modifier"
              FrameworkElement.HorizontalAlignment="Stretch"
              AppBarButton.Label="Modifier"
              AppBarButton.Icon="Edit"                       />
                <AppBarButton x:ConnectionId='3'
              x:Name="supprimer"
              AppBarButton.Label="Supprimer"
              AppBarButton.Icon="Delete"                        />
            </CommandBar.PrimaryCommands>
    </CommandBar>
  </Page.BottomAppBar>
  <Page.Content>
    <Grid
      x:Name="LayoutRoot"
      Panel.Background="White"
      FrameworkElement.Margin="0,-30,0,-0.333">
            <Grid.RowDefinitions>
                <RowDefinition
              RowDefinition.Height="Auto"/>
            <RowDefinition
              RowDefinition.Height="Auto"/>
            <RowDefinition
              RowDefinition.Height="Auto"/>
            <RowDefinition
              RowDefinition.Height="Auto"/>
                <RowDefinition
              RowDefinition.Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.Children>
                <StackPanel
              Grid.Row="0"
              FrameworkElement.Margin="0,0,0,0">
                    <StackPanel.Children>
                        <Grid
                      FrameworkElement.Height="30" Background="{ThemeResource PhoneAccentBrush}">
                        </Grid>
                    </StackPanel.Children>
            </StackPanel>
            <Grid
              Grid.Row="1"
              FrameworkElement.Margin="0,0,0,10">
              <Grid.ColumnDefinitions>
                        <ColumnDefinition
                      ColumnDefinition.Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Children>
                        <Grid
                      Grid.Column="0"
                      FrameworkElement.Margin="15,15,15,15"
                      FrameworkElement.Height="100">
                            <Grid.Background>
                                <Binding
                          Binding.Path="Fond"/>
                            </Grid.Background>
                            <Grid.Children>
                                <TextBlock
                              TextBlock.FontSize="40"
                              FrameworkElement.HorizontalAlignment="Center"
                              FrameworkElement.VerticalAlignment="Center"
                              TextBlock.FontWeight="Medium">
                                    <TextBlock.Text>
                                        <Binding
                                  Binding.Path="Intitule"/>
                                    </TextBlock.Text>
                                    <TextBlock.Foreground>
                                        <Binding
                                  Binding.Path="Police"/>
                                    </TextBlock.Foreground>
                                </TextBlock>
                            </Grid.Children>
                        </Grid>
                    </Grid.Children>
            </Grid>
            <Grid
              Grid.Row="2"
              FrameworkElement.Margin="0,0,0,10">
              <Grid.ColumnDefinitions>
                    <ColumnDefinition
                      ColumnDefinition.Width="Auto"/>
                        <ColumnDefinition
                      ColumnDefinition.Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Children>
                        <Image
                      Grid.Column="0"
                      FrameworkElement.HorizontalAlignment="Left"
                      FrameworkElement.Height="115"
                      FrameworkElement.VerticalAlignment="Top"
                      FrameworkElement.Width="115"
                      FrameworkElement.Margin="15,25,15,25"
                      Image.Source="Assets/Clock.png"/>
                        <Grid
                      Grid.Column="1"
                      Panel.Background="#FFF4F4F5"
                      FrameworkElement.Margin="15,15,15,15">
                            <Grid.RowDefinitions>
                                <RowDefinition
                              RowDefinition.Height="*"/>
                                <RowDefinition
                              RowDefinition.Height="*"/>
                                <RowDefinition
                              RowDefinition.Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.Children>
                                <StackPanel
                              Grid.Row="0"
                              FrameworkElement.Margin="10,0,10,0"
                              FrameworkElement.VerticalAlignment="Center"
                              StackPanel.Orientation="Horizontal">
                                    <StackPanel.Children>
                                        <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.Text="Début :"
                                      TextBlock.FontSize="25"
                                      FrameworkElement.Margin="0,0,10,0" Foreground="Black"/>
                                        <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.FontSize="25" Foreground="{ThemeResource PhoneAccentBrush}">
                                            <TextBlock.Text>
                                                <Binding
                                          Binding.Path="Debut"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel.Children>
                                </StackPanel>
                                <StackPanel
                              Grid.Row="1"
                              FrameworkElement.Margin="10,0,10,0"
                              FrameworkElement.VerticalAlignment="Center"
                              StackPanel.Orientation="Horizontal">
                                    <StackPanel.Children>
                                        <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.Text="Fin :"
                                      TextBlock.FontSize="25"
                                      FrameworkElement.Margin="0,0,46,0" Foreground="Black"/>
                                        <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.FontSize="25" Foreground="{ThemeResource PhoneAccentBrush}">
                                            <TextBlock.Text>
                                                <Binding
                                          Binding.Path="Fin"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel.Children>
                                </StackPanel>
                                <StackPanel
                              Grid.Row="2"
                              FrameworkElement.Margin="10,0,10,0"
                              FrameworkElement.VerticalAlignment="Center"
                              StackPanel.Orientation="Horizontal">
                                    <StackPanel.Children>
                                        <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.Text="Durée :"
                                      TextBlock.FontSize="25"
                                      FrameworkElement.Margin="0,0,13,0" Foreground="Black"/>
                                        <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.FontSize="25" Foreground="{ThemeResource PhoneAccentBrush}">
                                            <TextBlock.Text>
                                                <Binding
                                          Binding.Path="Duree"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel.Children>
                                </StackPanel>
                            </Grid.Children>
                        </Grid>
                    </Grid.Children>
            </Grid>
            <Grid
              Grid.Row="3"
              FrameworkElement.Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                      ColumnDefinition.Width="*"/>
                        <ColumnDefinition
                      ColumnDefinition.Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Children>
                        <Grid
                      Grid.Column="0"
                      Panel.Background="#FFF4F4F5"
                      FrameworkElement.Margin="10,15,10,15">
                      <Grid.RowDefinitions>
                            <RowDefinition
                              RowDefinition.Height="*"/>
                            <RowDefinition
                              RowDefinition.Height="*"/>
                                <RowDefinition
                              RowDefinition.Height="*"/>
                            </Grid.RowDefinitions>
                      <Grid.Children>
                            <StackPanel
                              Grid.Row="0"
                              FrameworkElement.Margin="10,0,10,0"
                              FrameworkElement.VerticalAlignment="Center"
                              StackPanel.Orientation="Horizontal">
                              <StackPanel.Children>
                                    <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.Text="Type :"
                                      TextBlock.FontSize="25"
                                      FrameworkElement.Margin="0,0,10,0" Foreground="Black"/>
                                    <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.FontSize="25" Foreground="{ThemeResource PhoneAccentBrush}">
                                            <TextBlock.Text>
                                                <Binding
                                          Binding.Path="Type"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                              </StackPanel.Children>
                            </StackPanel>
                            <StackPanel
                              Grid.Row="1"
                              FrameworkElement.Margin="10,0,10,0"
                              FrameworkElement.VerticalAlignment="Center"
                              StackPanel.Orientation="Horizontal">
                              <StackPanel.Children>
                                    <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.Text="Salle :"
                                      TextBlock.FontSize="25"
                                      FrameworkElement.Margin="0,0,10,0" Foreground="Black"/>
                                    <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.FontSize="25" Foreground="{ThemeResource PhoneAccentBrush}">
                                            <TextBlock.Text>
                                                <Binding
                                          Binding.Path="Salle"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                              </StackPanel.Children>
                            </StackPanel>
                            <StackPanel
                              Grid.Row="2"
                              FrameworkElement.Margin="10,0,10,0"
                              FrameworkElement.VerticalAlignment="Center"
                              StackPanel.Orientation="Horizontal">
                              <StackPanel.Children>
                                    <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.Text="Prof :"
                                      TextBlock.FontSize="25"
                                      FrameworkElement.Margin="0,0,10,0" Foreground="Black"/>
                                    <TextBlock
                                      TextBlock.TextWrapping="Wrap"
                                      TextBlock.FontSize="25" Foreground="{ThemeResource PhoneAccentBrush}">
                                            <TextBlock.Text>
                                                <Binding
                                          Binding.Path="Prof"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                              </StackPanel.Children>
                            </StackPanel>
                      </Grid.Children>
                    </Grid>
                    <Image
                      Grid.Column="1"
                      FrameworkElement.HorizontalAlignment="Left"
                      FrameworkElement.Height="115"
                      FrameworkElement.VerticalAlignment="Top"
                      FrameworkElement.Width="115"
                      FrameworkElement.Margin="10,25,10,25"
                      Image.Source="Assets/agenda2.png"/>
              </Grid.Children>
            </Grid>
                <Grid
              Grid.Row="4"
              UIElement.Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                      ColumnDefinition.Width="*"/>
                        <ColumnDefinition
                      ColumnDefinition.Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Children>
                        <Grid
                      Grid.Column="0"
                      FrameworkElement.Margin="20,20,20,20">
                            <Grid.Children>
                                <Button
                              Control.Background="#FFF4F4F5"
                              ContentControl.Content="Paire"
                              FrameworkElement.HorizontalAlignment="Stretch"
                              FrameworkElement.VerticalAlignment="Stretch"
                              Control.FontSize="30" Foreground="{ThemeResource PhoneAccentBrush}">
                                    <Button.BorderBrush>
                                        <Binding
                                  Binding.Path="Paire"/>
                                    </Button.BorderBrush>
                                </Button>
                            </Grid.Children>
                        </Grid>
                        <Grid
                      Grid.Column="1"
                      FrameworkElement.Margin="20,20,20,20">
                            <Grid.Children>
                                <Button
                              Control.Background="#FFF4F4F5"
                              ContentControl.Content="Impaire"
                              FrameworkElement.HorizontalAlignment="Stretch"
                              FrameworkElement.VerticalAlignment="Stretch"
                              Control.FontSize="30" Foreground="{ThemeResource PhoneAccentBrush}">
                                    <Button.BorderBrush>
                                        <Binding
                                  Binding.Path="Impaire"/>
                                    </Button.BorderBrush>
                                </Button>
                            </Grid.Children>
                        </Grid>
                    </Grid.Children>
                </Grid>
            </Grid.Children>
    </Grid>
  </Page.Content>
</Page>


